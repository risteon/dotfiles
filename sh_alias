# alias definitions
alias li='du -cksh * | sort -h'
alias j="z" # jump for FASD

# change directories
alias cd..="cd .."
alias ...="cd ../../"
alias ....="cd ../../../"
alias .....="cd ../../../../"
alias ......="cd ../../../../../"
alias .2="cd ../.."
alias .3="cd ../../.."
alias .4="cd ../../../.."
alias .5="cd ../../../../.."

# piping to xclip
alias xxx="xclip -sel c"
alias xx="xclip -sel primary"

