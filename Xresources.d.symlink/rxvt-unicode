!#######################################################
!                RXVT configuration                    #
!#######################################################
! set $TERM
URxvt.termName:                    rxvt-256color
! dark background, light text
URxvt.reverseVideo:                True
URxvt.foreground:                  #080808

! transparency - true or false (default)
URxvt*transparent:                 True
! tint with any color; i.e., blue, red, tomato4, olivedrab2, etc.
!   some nice listings are at:
!     http://www.nisrv.com/drupal/?q=node/11
!     http://www.htmlgoodies.com/tutorials/colors/article.php/3478921
!URxvt*tintColor: Blue
! shading - 0 to 99 darkens, 101 to 200 lightens.
!   Do not use with tintColor; just use a darker or lighter color instead.
URxvt*shading:                     25

! Font
URxvt.font: xft:Sauce Code Pro Nerd Font:size=11:antialias=true:hinting=true
URxvt.letterSpace: -0.5

! Hide scrollbar
URxvt.scrollBar:                   False

! Scrollback position
! do not scroll with output
URxvt*scrollTtyOutput:             false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer:            true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress:           true

! Fade text when window focus is lost
URxvt.fading:                      25

! Change unreadable dark blue to a lighter version
URxvt.color12:          #00BFFF

!Disables the insanely annoying Ctrl+Shift shortcut that enters ISO14755 mode
URxvt.iso14755:         False

Xft.dpi: 96
!Xft.antialias: true
!Xft.hinting: true
!Xft.hintstyle: hintfull
